<div class="container">

	<div class="container text-center">
		<h2 class=" pt-3 pb-2"><b>Welcome to <a style="color:  #FF5C20">Hostel</a> management System</b></h2>
		<hr class="w-100 mx-auto">
	</div>

	 <div class="row mt-2">
		<div class="col-12">
			<h2><b>Sign Up</b></h2>
			<%=form_for @user,url:hostel_operation_path,method:'patch' do |f|%>
					<div class="row mt-4">
					    <div class="col">
					      <label>First Name :</label><br>
						      <%=f.text_field :firstname, class:'form-control'%>
					    </div>
                        <div class="col">
					      <label>Last Name :</label><br>
						      <%=f.text_field :lastname, class:'form-control'%>
					    </div>
					</div>

                    <div class="row mt-4">
					    <div class="col">
					      <label>Rloe :</label><br>
						      <%=f.text_field :role, class:'form-control',readonly:true%>
					    </div>
					</div>

                    <div class="row mt-2">
					    <div class="col">
					      <label>Email Id :</label>
					      <%=f.text_field :email, class:'form-control'%>
					    </div>
					  </div>

                      <div class="row mt-2">
					    <div class="col">
					      <label>Phone No :</label>
					      <%=f.text_field :phoneno, class:'form-control'%>
					    </div>
						<div class="col",display=<%=@visable%>>
					      <label>Room No :</label>
					      <%=f.text_field :room_no, class:'form-control',readonly:true%>
					    </div>
					  </div>

					  <div class="row mt-2">
					    <div class="col">
					      <label>UserName/Hostel Id :</label>
					      <%=f.text_field :username, class:'form-control',readonly:true%>
					    </div>
					  </div>
					  <div class="row mt-2">
					    <div class="col">
					      <label>Password :</label>
                          <%=f.password_field :password, class:'form-control'%>
					    </div>
					  </div>
					<%=f.submit 'Sign Up'%>   
                <%end%>
		</div>
	</div>
</div>