<%= render 'owner/header' %>
<%= render 'owner/menu' %>
<div style="height:auto;width:60%;margin-top:5%;margin-left:30%;border:2px solid orange;border-radius:5%" class="bg-light">
	   			<h2 class="pt-4 text-center "><b>Leave Applications</b></h2>
	   			<hr>
		   			<table class="table table-stripped table-hover table-bordered">
		   	<tr class="table-danger">		
		   	<td><b>No.</b></td>
			<td><b>Hostel_id</b></td>
			<td><b>Date From</b></td>
			<td><b>Date To</b></td>
			<td><b>Reason</b></td>
			<td><b>Approve Requests</b></td>
			<td><b>Reject Requests</b></td>
			</tr>
			
			<%i=0%>
			 <%@all_leave.each do |leave_request|%>
                <tr>	
                <td><b><%=i=i+1%></b></td>
                <td><b><%=leave_request.user.username%></b></td>
                <td><b><%=leave_request.date_from%></b></td>
                <td><b><%=leave_request.date_to%></b></td>
                <td><b><%=leave_request.reason%></b></td>
                <td><center><b><%=button_to 'Approve',student_leave_path(leave_request.user,leave_request,flag:'approve'),class:"btn btn-success",method:'put'%></b></center></td>
                <td><center><b><%=button_to 'Reject',student_leave_path(leave_request.user,leave_request,flag:'reject'),class:"btn btn-danger",method:'put'%></b></center></td>
                </tr>
            <%end%>
				</table>
				
	   		</div>
</div>